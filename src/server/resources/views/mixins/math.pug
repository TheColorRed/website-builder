mixin bytesToSize(bytes)
  if bytes / 1024 / 1024 / 1024 / 1024 / 1024 > 1
    = (bytes / 1024 / 1024 / 1024 / 1024 / 1024).toFixed(2) + ' PB'
  else if bytes / 1024 / 1024 / 1024 / 1024 > 1
    = (bytes / 1024 / 1024 / 1024 / 1024).toFixed(2) + ' TB'
  else if bytes / 1024 / 1024 / 1024 > 1
    = (bytes / 1024 / 1024 / 1024).toFixed(2) + ' GB'
  else if bytes / 1024 / 1024 > 1
    = (bytes / 1024 / 1024).toFixed(2) + ' MB'
  else if bytes / 1024 > 1
    = (bytes / 1024).toFixed(2) + ' KB'
  else
    = bytes + ' Bytes'